@model TechJobs6Persistent.ViewModels.AddJobViewModel


<h1>Add Job</h1>

<form asp-controller="Job" asp-action="Add" method="post">
  <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <br/>
    <div class="form-group">
        <label asp-for="EmployerId"></label>
        <select asp-for="EmployerId" asp-items = "Model.Employers" />
    </div>
    <input type="submit" value="Add Job" />
</form>