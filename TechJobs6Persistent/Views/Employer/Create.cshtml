@model TechJobs6Persistent.ViewModels.AddEmployerViewModel 
<h1>Add New Employer</h1>

<form asp-controller="Employer" asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="Name">Employer Name</label>
        <input asp-for="@Model.Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <br />
    
    <div class="form-group">
        <label asp-for="Location">Employer Location</label>
         <input asp-for="@Model.Location" />
        <span asp-validation-for="Location"></span>
    </div>

    <input type="submit" value="Add Employer" />

</form>